{
    "target_overrides": {
        "*": {
            "platform.stdio-baud-rate"          : 115200,
            "platform.stdio-convert-newlines"   : true,
            "update-client.application-details" : "MBED_CONF_BOOTLOADER_APPLICATION_HEADER_ADDRESS",
            "update-client.storage-address"     : "MBED_CONF_BOOTLOADER_STORAGE_ADDRESS",
            "update-client.storage-size"        : "MBED_CONF_BOOTLOADER_STORAGE_SIZE",
            "update-client.storage-locations"   : "MBED_CONF_BOOTLOADER_STORAGE_LOCATIONS",
            "mbed-trace.enable"                 : null,
            "nsapi.default-wifi-security"       : "WPA_WPA2",
            "nsapi.default-wifi-ssid"           : "\"mbedEnabled\"",
            "nsapi.default-wifi-password"       : "\"validation\""
        },
        "K64F": {
            "target.features_add"               : ["DEVMGMT", "BOOTLOADER"]
        },
        "K66F": {
            "target.features_add"               : ["DEVMGMT", "BOOTLOADER"]
        },
        "NUCLEO_F429ZI": {
            "target.features_add"               : ["DEVMGMT", "BOOTLOADER"]
        },
        "NUCLEO_F767ZI": {
            "target.features_add"               : ["DEVMGMT", "BOOTLOADER"]
        },
        "NUCLEO_F746ZG": {
            "target.features_add"               : ["DEVMGMT", "BOOTLOADER"]
        },
        "DISCO_L475VG_IOT01A": {
            "target.features_add"               : ["DEVMGMT", "BOOTLOADER"],
            "target.extra_labels_add"           : ["WIFI_ISM43362"],
            "target.network-default-interface-type" : "WIFI"
        },
        "DISCO_F413ZH": {
            "target.features_add"               : ["DEVMGMT", "BOOTLOADER"],
            "target.extra_labels_add"           : ["WIFI_ISM43362"],
            "target.network-default-interface-type" : "WIFI"
        },
        "DISCO_F746NG": {
            "target.features_add"               : ["DEVMGMT", "BOOTLOADER"]
        },
        "NUMAKER_PFM_NUC472": {
            "target.features_add"               : ["DEVMGMT", "BOOTLOADER"],
            "target.network-default-interface-type" : "ETHERNET",
            "drivers.uart-serial-rxbuf-size"    : 1024,
            "drivers.uart-serial-txbuf-size"    : 1024
        },
        "NUMAKER_PFM_M487": {
            "target.features_add"               : ["DEVMGMT", "BOOTLOADER"],
            "target.network-default-interface-type" : "ETHERNET",
            "drivers.uart-serial-rxbuf-size"    : 1024,
            "drivers.uart-serial-txbuf-size"    : 1024
        },
        "NUMAKER_IOT_M487": {
            "target.features_add"               : ["DEVMGMT", "BOOTLOADER"],
            "target.network-default-interface-type" : "WIFI",
            "esp8266.tx"                        : "PH_8",
            "esp8266.rx"                        : "PH_9",
            "esp8266.provide-default"           : true,
            "drivers.uart-serial-rxbuf-size"    : 1024,
            "drivers.uart-serial-txbuf-size"    : 1024
        },
        "SDT64B": {
            "target.features_add"               : ["DEVMGMT", "BOOTLOADER"]
        },
        "UBLOX_EVK_ODIN_W2": {
            "target.features_add"               : ["DEVMGMT", "BOOTLOADER"],
            "target.network-default-interface-type" : "WIFI"
        },
        "UBLOX_C030_U201": {
            "target.features_add"               : ["DEVMGMT", "BOOTLOADER", "LWIP"],
            "target.network-default-interface-type" : "CELLULAR",
            "target.header_format": [
                ["magic", "const", "32be", "0x5a51b3d4"],
                ["version", "const", "32be", "2"],
                ["firmwareVersion", "timestamp", "64be", null],
                ["firmwareSize", "size", "64be", ["application"]],
                ["firmwareHash", "digest", "SHA256", "application"],
                ["hashpad", "const", "64be", "0"],
                ["hashpad", "const", "64be", "0"],
                ["hashpad", "const", "64be", "0"],
                ["hashpad", "const", "64be", "0"],
                ["campaign", "const", "64be", "0"],
                ["campaign", "const", "64be", "0"],
                ["firmwareSignatureSize", "const", "32be", "0"],
                ["headerCRC", "digest", "CRCITT32be", "header"]],
            "lwip.ipv4-enabled"                 : true,
            "lwip.ethernet-enabled"             : false,
            "lwip.ppp-enabled"                  : true,
            "lwip.tcp-enabled"                  : true,
            "mbed-trace.enable"                 : false
        },
        "MTB_MXCHIP_EMW3166": {
            "target.features_add"               : ["DEVMGMT", "BOOTLOADER"],
            "target.OUTPUT_EXT"                 : "hex"
        },
        "MTB_USI_WM_BN_BM_22": {
            "target.features_add"               : ["DEVMGMT", "BOOTLOADER"],
            "target.OUTPUT_EXT"                 : "hex"
        }
    },
    "config": {
        "format-storage-layer-on-error": {
            "help": "Whether to format the storage layer when it cannot be read - always disable for production devices!",
            "value": 1
        },
        "developer-mode": {
            "help": "Enable Developer mode to skip Factory enrollment",
            "value": 1
        },
        "main-stack-size": {
            "value": 6000
        }
    }
}